        }

        .love-message {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 15px;
            margin: 2rem 0;
            backdrop-filter: blur(5px);
        }

        .poem {
            font-size: 1.2rem;
            line-height: 1.6;
        }

        .love-button {
            background: #ff4757;
            color: white;
            border: none;
            padding: 1rem 2rem;
            font-size: 1.2rem;
            border-radius: 25px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .love-button:hover {
            transform: scale(1.1);
        }

        .footer {
            margin-top: 3rem;
            opacity: 0.8;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }
            
