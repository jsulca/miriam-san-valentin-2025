        <style is:global>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                background: linear-gradient(45deg, #ff6b6b, #ff8e8e, #ffb5b5);
                min-height: 100vh;
                font-family: "Arial Rounded MT Bold", cursive;
                color: #fff;
            }

            .title {
                font-size: 3rem;
                margin-bottom: 2rem;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            }

            .heart-container {
                position: relative;
                height: 200px;
            }

            .heart {
                position: absolute;
                animation: float 3s infinite ease-in-out;
                font-size: 2rem;
            }

            @keyframes float {
                0%,
                100% {
                    transform: translateY(0);
                }
                50% {
                    transform: translateY(-20px);
                }
            }

            .love-message {
                background: rgba(255, 255, 255, 0.1);
                padding: 2rem;
                border-radius: 15px;
                margin: 2rem 0;
                backdrop-filter: blur(5px);
            }

            .poem {
                font-size: 1.2rem;
                line-height: 1.6;
            }

            .love-button {
                background: #ff4757;
                color: white;
                border: none;
                padding: 1rem 2rem;
                font-size: 1.2rem;
                border-radius: 25px;
                cursor: pointer;
                transition: transform 0.3s ease;
            }

            .love-button:hover {
                transform: scale(1.1);
            }

            .footer {
                margin-top: 3rem;
                opacity: 0.8;
            }

            @media (max-width: 768px) {
                .container {
                    padding: 1rem;
                }

                .title {
                    font-size: 2rem;
                }
            }
        </style>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const btnAceptar = document.getElementById("btnAceptar")!;
                btnAceptar.addEventListener("click", () => {
                    confetti({
                        particleCount: 100,
                        spread: 70,
                        origin: { y: 0.6 },
                    });
                });
            });
        </script>
